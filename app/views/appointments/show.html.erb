<div style="width:40%; margin:0 auto;">

    <%= form_for(@appointment) do |f|%>
      <div class="field row">
        <h4 class="large-padding">
        <%= f.label "Paciente:"%>
        </h4>   
        <h4 class="padding-campos dato-form-controll"> 
        <%=@appointment.patient.nombre_completo%>  
        </h4>
      </div>
      <div class="field row">
        <h4 class="large-padding">
        <%= f.label "Fecha:"%>
        </h4>   
        <h4 class="padding-campos dato-form-controll"> 
        <%=@appointment.fecha.strftime('%c')%>
        </h4>
      </div>
      <div class="field row">
        <h4 class="large-padding">
        <%= f.label "Motivo:"%>
        </h4>   
        <h4 class="padding-campos dato-border-form-controll"> 
        <%=@appointment.motivo%>          
        </h4>
      </div>
      <div class="field row">
        <h4 class="large-padding">
        <%= f.label "Anotaciones:"%>
        </h4>   
        <h4 class="padding-campos dato-form-controll"> 
        <%=@appointment.anotaciones%>          
        </h4>
      </div>
      <div class="field row">
        <h4 class="large-padding">
        <%= f.label "Dentista:"%>
        </h4>   
        <h4 class="padding-campos dato-form-controll"> 
        <%=@appointment.user.email%> 
        </h4>
      </div>
       <p>
<%end%>

<div class="field">
  <p>Formulario de intervencion</p>
<%= link_to 'Generar', new_appointment_procedure_path(@appointment,@procedure), class:"orange cream btn margin-right" %>
</div>
<%= link_to "Editar", edit_appointment_path(@appointment), class:"green cream btn "%> |
<%= link_to 'Volver', appointments_path, class:"orange cream btn margin-right" %>
<%= link_to 'Eliminar', @appointment, method: :delete, data: { confirm: '¿Está seguro?' },class:"be-red cream btn " %>
</div>